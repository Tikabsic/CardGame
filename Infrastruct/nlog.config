<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	autoReload="true"
	internalLogLevel="Info"
	internalLogFile="d:\csharp\log\internal-nlog.txt">

	<extensions>

		<add assembly="NLog.Web.AspNetCore"/>

	</extensions>

	<targets>

		<target xsi:type="File" name="exceptions" fileName="D:\CardGameDB\Logs\nlog-all-exceptions-${shortdate}.log"
				
				layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message}">

		</target>

		<target xsi:type="File" name="allfile" fileName="D:\CardGameDB\Logs\nlog-all-${shortdate}.log"
				
			layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message}">

		</target>

	</targets>

	<rules>

		<logger name="*" minlevel="Trace" writeTo="allfile" />

		<logger name="Application.*" minlevel="Error" writeTo="exceptions" />

	</rules>

</nlog>